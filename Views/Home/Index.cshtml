
@{
    ViewBag.Title = "Index";
}

<div class="panel-body" id="panel-body">
    <ul class="chat" id="chatwindow">       
    </ul>
</div>
<div class="panel-footer">
    <div class="input-group">
        <input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
        <span class="input-group-btn">
            <button class="btn btn-success btn-sm" id="btn-chat">
                Send
            </button>
        </span>
    </div>
</div>
<div id="messages">
    </br>
    <div class="dropdown" id="dropDownDiv">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropDown1" aria-haspopup="true" aria-expanded="false">
            Change your username
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropDown1">
            <li>
                <input id="text-requiredUserName" class="form-control input-sm" type="text" placeholder="Type your username here and hit Enter." />
            </li>
        </ul>
    </div>
    <div>
        <span id="infoMessage"></span> </br>
        <span id="errorMessage"></span></br>
        
    </div>
</div>
<script src="~/scripts/chat.js" type="text/javascript"></script>  


